<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Switch theme. -->
    <style name="SwitchTheme">
        <item name="colorAccent">@color/colorSwitch</item>
    </style>


    <!-- CheckBox theme. -->
    <style name="CheckBoxTheme">
        <item name="colorAccent">@color/colorEnable</item>
        <item name="colorControlNormal">@color/colorDisable</item>
    </style>


    <!-- RadioButton theme. -->
    <style name="RadioButtonTheme">
        <item name="colorAccent">@color/colorRadioButton</item>
    </style>


    <!-- RadioGroupButton theme. -->
    <style name="RadioGroupButtonTheme">
        <item name="colorAccent">@color/colorRadioGroupButton</item>
        <item name="colorControlNormal">@color/colorRadioGroupButton2</item>
    </style>


</resources>
